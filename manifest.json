{
    "manifest_version": 3,
    "name": "UK Visa Sponsor Checker",
    "version": "1.0",
    "description": "Highlights UK Visa Sponsors on LinkedIn job pages.",
    "permissions": [
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://www.linkedin.com/jobs/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.linkedin.com/jobs/*"
            ],
            "js": [
                "utils.js",
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        },
        {
            "matches": [
                "https://www.linkedin.com/search/results/people/*"
            ],
            "js": [
                "utils.js",
                "people_company_check.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "sponsors.json"
            ],
            "matches": [
                "https://www.linkedin.com/*"
            ]
        }
    ]
}